{
	"schemaVersion": 1,
	"id": "clearview",
	"version": "${version}",
	"name": "clearview",
	"description": "removes the annoying blindness/nausea/darkness effects and removes overlays like water fog, pumpkin, spyglass, portal overlay etc. Compatible with sodium and highly configurable",
	"authors": [
		"bikerboys"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/clearviews",
		"sources": "https://github.com/michiel1106/Clearviews/tree/master",
		"issues": "https://github.com/michiel1106/Clearviews/issues"
	},
	"license": "CC0-1.0",
	"icon": "assets/clearview/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"bikerboys.clearview.Clearview"
		],
		"client": [
			"bikerboys.clearview.ClearviewClient"
		]
	},
	"mixins": [
		"clearview.mixins.json",
		{
			"config": "clearview.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.7",
		"minecraft": ["1.21.7"],
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}